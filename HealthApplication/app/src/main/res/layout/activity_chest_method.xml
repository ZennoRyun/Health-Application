<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/chest1"
                android:layout_width="wrap_content"
                android:layout_height="135dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/bench_press" />

            <Button
                android:id="@+id/chestbutton1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:text="벤치 프레스"
                app:backgroundTint="#46ADBA" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/chest2"
                android:layout_width="wrap_content"
                android:layout_height="135dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/incline_bench_press" />

            <Button
                android:id="@+id/chestbutton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:text="인클라인
                벤치프레스"
                app:backgroundTint="#46ADBA" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/chest3"
                android:layout_width="wrap_content"
                android:layout_height="135dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/dumbell_press"/>

            <Button
                android:id="@+id/chestbutton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:text="덤벨 프레스"
                app:backgroundTint="#46ADBA" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/chest4"
                android:layout_width="wrap_content"
                android:layout_height="135dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/chest_press" />

            <Button
                android:id="@+id/chestbutton4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:text="체스트 프레스"
                app:backgroundTint="#46ADBA" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/chest5"
                android:layout_width="wrap_content"
                android:layout_height="135dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/peckdeck_fly" />

            <Button
                android:id="@+id/chestbutton5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:text="펙 덱 플라이"
                app:backgroundTint="#46ADBA" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>