<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/adomi1"
            android:layout_width="wrap_content"
            android:layout_height="135dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/crunch" />
        <Button
            android:id="@+id/adomibutton1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="크런치"
            app:backgroundTint="#46ADBA" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/adomi2"
            android:layout_width="wrap_content"
            android:layout_height="135dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/flank" />

        <Button
            android:id="@+id/adomibutton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="플랭크"
            app:backgroundTint="#46ADBA" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/adomi3"
            android:layout_width="wrap_content"
            android:layout_height="135dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/leg_raise" />

        <Button
            android:id="@+id/adomibutton3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="레그 레이즈"
            app:backgroundTint="#46ADBA" />
    </LinearLayout>
</LinearLayout>