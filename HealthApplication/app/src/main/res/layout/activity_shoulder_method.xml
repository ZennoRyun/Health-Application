<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/sdr1"
                android:layout_width="wrap_content"
                android:layout_height="135dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/sdr_press" />

            <Button
                android:id="@+id/sdrbutton1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:text="숄더 프레스"
                app:backgroundTint="#46ADBA" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/sdr2"
                android:layout_width="wrap_content"
                android:layout_height="135dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/lateral_raise"/>

            <Button
                android:id="@+id/sdrbutton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:text="래터럴 레이즈"
                app:backgroundTint="#46ADBA" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/sdr3"
                android:layout_width="wrap_content"
                android:layout_height="135dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/front_raise" />

            <Button
                android:id="@+id/sdrbutton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:text="프론트 레이즈"
                app:backgroundTint="#46ADBA" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/sdr4"
                android:layout_width="wrap_content"
                android:layout_height="135dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/r_peckdeck_fly" />

            <Button
                android:id="@+id/sdrbutton4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:text="리버스 팩덱 플라이"
                app:backgroundTint="#46ADBA" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>