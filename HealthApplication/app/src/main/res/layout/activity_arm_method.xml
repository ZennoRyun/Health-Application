<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/arm1"
                android:layout_width="wrap_content"
                android:layout_height="135dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/barbell_curl" />

            <Button
                android:id="@+id/armbutton1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:text="바벨 컬"
                app:backgroundTint="#46ADBA" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/arm3"
                android:layout_width="wrap_content"
                android:layout_height="135dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ultimate_dumbell_curl" />

            <Button
                android:id="@+id/armbutton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:text="얼터네이트 덤벨 컬"
                app:backgroundTint="#46ADBA" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/arm5"
                android:layout_width="wrap_content"
                android:layout_height="135dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/dumbell_kickback" />

            <Button
                android:id="@+id/armbutton5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:text="덤벨 킥백"
                app:backgroundTint="#46ADBA" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/arm6"
                android:layout_width="wrap_content"
                android:layout_height="135dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/cable_push_down" />

            <Button
                android:id="@+id/armbutton6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:text="케이블 푸쉬다운"
                app:backgroundTint="#46ADBA" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>