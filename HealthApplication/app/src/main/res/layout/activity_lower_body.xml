<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/lower1"
                android:layout_width="wrap_content"
                android:layout_height="135dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/squrt" />

            <Button
                android:id="@+id/lowerbutton1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:text="스쿼트"
                app:backgroundTint="#46ADBA" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/lower2"
                android:layout_width="wrap_content"
                android:layout_height="135dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/lunge"/>

            <Button
                android:id="@+id/lowerbutton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:text="런지"
                app:backgroundTint="#46ADBA" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/lower3"
                android:layout_width="wrap_content"
                android:layout_height="135dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/leg_press" />

            <Button
                android:id="@+id/lowerbutton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:text="레그 프레스"
                app:backgroundTint="#46ADBA" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/lower4"
                android:layout_width="wrap_content"
                android:layout_height="135dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/leg_curl" />

            <Button
                android:id="@+id/lowerbutton4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:text="레그 컬"
                app:backgroundTint="#46ADBA" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>